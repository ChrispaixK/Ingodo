
<div class="login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="header"> 
<h2>LOGIN</h2> 
<button><%= f.submit "Log In", class: "btn-header" %></button>
</div>
  <div class="field">
    <%= f.label :email, class: "label" %><br />
    <%= f.email_field :email, autofocus: true,placeholder: "Enter email", autocomplete: "email", class: "input" %>
  </div>

  <div class="field last">
    <%= f.label :password, class: "label" %><br />
    <%= f.password_field :password,placeholder: "Enter password", autocomplete: "current-password", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? %>
  
   <div class="txt-cntr">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    
   
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
</div>